{% set icon = icon|default('la-inbox') %}
{% set title = title|default('Rien ici') %}
{% set message = message|default(null) %}
{% set action_url = action_url|default(null) %}
{% set action_label = action_label|default(null) %}

<div class="skn-empty-state">
    <div class="skn-empty-state__icon">
        <i class="la {{ icon }}"></i>
    </div>
    <h3 class="skn-empty-state__title">{{ title }}</h3>
    {% if message %}
        <p class="skn-empty-state__message">{{ message }}</p>
    {% endif %}
    {% if action_url and action_label %}
        <a href="{{ action_url }}" class="skn-btn skn-btn--primary">
            {{ action_label }}
        </a>
    {% endif %}
</div>
